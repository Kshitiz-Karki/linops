#*) show_main_menu ;;
#esac
#}

show_system_menu() {
  # case $(menu "System" "  Lock\n󱄄  Screensaver\n󰤄  Suspend\n  Relaunch\n󰜉  Restart\n󰐥  Shutdown") in
  case $(menu "System" "  Lock\n󰍃  Logout\n󰤄  Suspend\n  Relaunch\n󰜉  Restart\n󰐥  Shutdown") in
  *Lock*) omarchy-lock-screen ;;
  # *Logout*) hyprctl dispatch exit ;;
  *Logout*) loginctl terminate-user $USER ;;
  # *Screensaver*) omarchy-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Relaunch*) uwsm stop ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  # go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n󱓞  Trigger\n  Style\n  Setup\n󰉉  Install\n󰭌  Remove\n  Update\n  About\n  System")"
  go_to_menu "$(menu "Go" "󰧑  Learn\n󰍜  Toggle Waybar\n  Audio\n  Wifi\n󰂯  Bluetooth\n  Screenshot\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  # *apps*) walker -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  # *toggle*) show_toggle_menu ;;
  *toggle*) omarchy-toggle-waybar ;;
  *audio*) $TERMINAL --class=Wiremix -e wiremix ;;
  *wifi*) $TERMINAL -e nmtui-go-v0.2.2 ;;
  *bluetooth*) $TERMINAL -e bluetui-v0.6 ;;
  # *trigger*) show_trigger_menu ;;
  # *share*) show_share_menu ;;
  # *style*) show_style_menu ;;
  # *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  # *screenrecord*) show_screenrecord_menu ;;
  # *setup*) show_setup_menu ;;
  # *power*) show_setup_power_menu ;;
  # *install*) show_install_menu ;;
  # *remove*) show_remove_menu ;;
  # *update*) show_update_menu ;;
  # *about*) omarchy-launch-about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  go_to_menu "$1"
else
  show_main_menu
fi
