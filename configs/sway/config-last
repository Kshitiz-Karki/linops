# autostart
exec_always --no-startup-id wlsunset -t 3000 -T 5500 -s 17:00 -S 06:00
# exec_always --no-startup-id ~/bin/autotiling
# exec_always  --no-startup-id  mako &


# taken from https://github.com/Ruixi-rebirth/sway-dotfiles/tree/main
# waybar toggle #
    bindsym $mod+shift+o exec killall -SIGUSR1 waybar

# switch between current and last workspace, toggle back and forth
    bindsym ALt+Tab workspace back_and_forth
# cycle through all active workspaces across all monitors
bindsym $mod+Page_Up workspace next
bindsym $mod+Page_Down workspace prev

# Remove title bar
default_border pixel 3
default_floating_border pixel 3
gaps inner 4
gaps outer 0
gaps top -5


# Activate smart borders (always)
smart_borders on
smart_gaps on

